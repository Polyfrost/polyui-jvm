<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- mimic the fabric loader style for log messages !-->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{[%d{HH:mm:ss:SSS}]}{blue} %highlight{[%t/%level]}{0} %style{(%logger)}{cyan} %highlight{%msg}{DEBUG=white, INFO=normal}%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
